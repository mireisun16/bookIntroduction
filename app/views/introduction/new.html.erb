<h1><%= @pageTitle%></h1>
<p><%= @pageIntro1 %></p>
<p><%= @pageIntro2 %></p><br>

<<%= link_to "本の紹介一覧をみる",root_path %><br><br>

<% if @bk_intro.errors.present? %>
  <% @bk_intro.errors.messages.each do |key, value| %>
    <%= "#{key}が#{value.first}です" %>
  <% end %>
<% end %>

<%= form_tag create_path do %>
	タイトル：
	<%= text_field_tag :title,@bk_intro.title %><br>
	価格：
	<%= text_field_tag :price,@bk_intro.price %><br>
	説明：
	<%= text_area_tag :setsumei,@bk_intro.setsumei %><br>
	評価：
	<%= text_field_tag :hyouka,@bk_intro.hyouka %><br>
	<%= submit_tag '登録する' %>
<% end %>
